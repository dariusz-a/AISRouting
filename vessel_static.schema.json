{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/vessel_static.schema.json",
  "title": "Vessel Static Data",
  "description": "Schema for the vessel static JSON file used by AISRouting application.",
  "type": "object",
  "required": ["mmsi"],
  "properties": {
    "mmsi": {
      "type": "integer",
      "minimum": 0,
      "description": "Maritime Mobile Service Identity (MMSI)."
    },
    "typeOfMobile": {
      "type": ["string", "null"],
      "description": "Type of mobile (e.g. 'AtoN', 'Ship')."
    },
    "imo": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "IMO number if available."
    },
    "callsign": {
      "type": ["string", "null"]
    },
    "name": {
      "type": ["string", "null"],
      "description": "Vessel or AtoN name."
    },
    "shipType": {
      "type": ["integer", "null"]
    },
    "cargoType": {
      "type": ["integer", "null"]
    },
    "width": {
      "type": ["number", "null"],
      "minimum": 0
    },
    "length": {
      "type": ["number", "null"],
      "minimum": 0
    },
    "positionFixingDevice": {
      "type": ["string", "null"]
    },
    "dataSourceType": {
      "type": ["string", "null"]
    },
    "a": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Distance from reference to bow (meters)."
    },
    "b": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Distance from reference to stern (meters)."
    },
    "c": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Distance from reference to starboard (meters)."
    },
    "d": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Distance from reference to port (meters)."
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "mmsi": 992651010,
      "typeOfMobile": "AtoN",
      "imo": null,
      "callsign": null,
      "name": "STAFFANSBANK EAST",
      "shipType": null,
      "cargoType": null,
      "width": null,
      "length": null,
      "positionFixingDevice": null,
      "dataSourceType": null,
      "a": null,
      "b": null,
      "c": null,
      "d": null
    }
  ]
}
