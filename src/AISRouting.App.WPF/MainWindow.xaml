<Window x:Class="AISRouting.App.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AISRouting.App.WPF"
        xmlns:views="clr-namespace:AISRouting.App.WPF.Views"
        xmlns:converters="clr-namespace:AISRouting.App.WPF.Converters"
        mc:Ignorable="d"
        Title="AISRouting" Height="1000" Width="1000" MinHeight="850" MinWidth="1000">
    
    <Window.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Ship Selection View -->
        <views:ShipSelectionView Grid.Row="0" 
                                 DataContext="{Binding ShipSelectionViewModel}"
                                 Margin="0,0,0,10" />

        <!-- Track Results Panel -->
        <GroupBox Grid.Row="1" Header="Track Results" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Output Folder Selection -->
                <GroupBox Grid.Row="0" Header="Export Settings" Margin="0,0,0,10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Output Folder:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        
                        <TextBox Grid.Column="1"
                                 Text="{Binding OutputFolderPath, Mode=OneWay}"
                                 IsReadOnly="True"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"
                                 AutomationProperties.AutomationId="output-folder-textbox"
                                 AutomationProperties.Name="Output Folder Path"/>
                        
                        <Button Grid.Column="2"
                                Content="Browse..."
                                Command="{Binding SelectOutputFolderCommand}"
                                Width="100"
                                Margin="0,0,10,0"
                                AutomationProperties.AutomationId="browse-output-button"
                                AutomationProperties.Name="Browse for Output Folder"/>
                        
                        <Button Grid.Column="3"
                                Content="Export to XML"
                                Command="{Binding ExportRouteCommand}"
                                Width="120"
                                AutomationProperties.AutomationId="export-button"
                                AutomationProperties.Name="Export Route to XML"/>
                    </Grid>
                </GroupBox>

                <!-- Error Message -->
                <Border Grid.Row="1" 
                        Background="#FFFFE0E0" 
                        BorderBrush="Red" 
                        BorderThickness="1" 
                        Padding="10" 
                        Margin="0,0,0,5"
                        Visibility="{Binding TrackCreationError, Converter={StaticResource StringToVisibilityConverter}}">
                    <TextBlock Text="{Binding TrackCreationError}" 
                               Foreground="Red" 
                               FontWeight="Bold"/>
                </Border>

                <!-- Warning Message -->
                <Border Grid.Row="2" 
                        Background="#FFFFF0D0" 
                        BorderBrush="Orange" 
                        BorderThickness="1" 
                        Padding="10" 
                        Margin="0,0,0,5"
                        Visibility="{Binding WarningMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <TextBlock Text="{Binding WarningMessage}" 
                               Foreground="DarkOrange" 
                               FontWeight="SemiBold"/>
                </Border>

                <!-- Data Quality Message -->
                <Border Grid.Row="3" 
                        Background="#E0F0FF" 
                        BorderBrush="SteelBlue" 
                        BorderThickness="1" 
                        Padding="10" 
                        Margin="0,0,0,5"
                        Visibility="{Binding DataQualityMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <TextBlock Text="{Binding DataQualityMessage}" 
                               Foreground="SteelBlue"/>
                </Border>

                <!-- Track Results DataGrid -->
                <DataGrid Grid.Row="4"
                          ItemsSource="{Binding GeneratedWaypoints}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F5F5F5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Index" Binding="{Binding Index}" Width="60"/>
                        <DataGridTextColumn Header="Latitude" Binding="{Binding Lat, StringFormat=F6}" Width="100"/>
                        <DataGridTextColumn Header="Longitude" Binding="{Binding Lon, StringFormat=F6}" Width="100"/>
                        <DataGridTextColumn Header="Speed (kn)" Binding="{Binding Speed, StringFormat=F2}" Width="90"/>
                        <DataGridTextColumn Header="Heading" Binding="{Binding Heading}" Width="80"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding Time, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage, TargetNullValue='Ready'}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
